import os
from requests import Request, Session
from requests.exceptions import ConnectionError, Timeout, TooManyRedirects
import json

# API Key that is hidden for security purposes
my_secret = os.environ['secret_code']

# Coin Market Cap website the program is accessing for information consumption
url = 'https://pro-api.coinmarketcap.com/v1/cryptocurrency/quotes/latest'

# Dictionary that accesses the current top 10 crypto currentcies
parameters = {
  'start':1,
  'limit':10,
  'convert':'USD'
}

# API Key dictionary using JSON headers
headers = {
  'Accepts': 'application/json',
  'X-CMC_PRO_API_KEY': my_secret
}

# Current session with API Keys to retrieve existing session data
session = Session()
session.headers.update(headers)

# Empty string to add coin name and price to
coin_price = ''

# Test that attempts to retrieve the coins name, current USD price, 24 Hr percent, and it's current CMC Ranking, otherwise throws an error
try:
  response = session.get(url, params=parameters)
  data = json.loads(response.text)
  for i in range(0, 10):
    coin_prices += str(data['data'][i]['name']) + ' $'
    coin_prices += str(data['data'][i]['quote']['USD']['price']) + '\n'
    coin_prices += '24 Hrs Percent Change: ' + str(data['data'][i]['quote']['USD']['percent_change_24h']) + '\n'
    coin_prices += 'Current CMC Rank: ' + str(data['data'][i]['cmc_rank'])
    coin_prices += '\n---------------------------\n'
except (ConnectionError, Timeout, TooManyRedirects) as e:
  print(e)

# When called prints coin name, USD price, 24 Hr percent change and it's current CMC Ranking
# Prices are updated every 60 seconds
print(coin_price)


